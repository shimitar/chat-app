<div class="messages">
 <%= render partial: 'message', collection: @messages %>
 </div>

<%= form_with model: [@room, @message], class: 'send', local:true do |f| %>
  <div class="send_form">
   <%= f.text_field :content, class:'input_text', placeholder: 'type a message' %>
   <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
   </div>
   <%= f.submit '送信', class: 'form-submit' %>
  <% end %>